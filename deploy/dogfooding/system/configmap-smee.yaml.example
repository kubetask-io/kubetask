# Configuration for smee.io webhook proxy.
#
# To use:
# 1. Copy this file to configmap-smee.yaml
# 2. Get a smee.io channel at https://smee.io/
# 3. Replace YOUR_CHANNEL_ID with your channel ID
# 4. Apply: kubectl apply -f configmap-smee.yaml
apiVersion: v1
kind: ConfigMap
metadata:
  name: smee-config
  namespace: kubeopencode-system
  labels:
    app.kubernetes.io/name: smee-client
    app.kubernetes.io/component: webhook-proxy
data:
  # Get a new channel at https://smee.io/
  SMEE_URL: "https://smee.io/YOUR_CHANNEL_ID"
  # Target webhook endpoint (internal service URL)
  TARGET_URL: "http://kubeopencode-webhook.kubeopencode-system.svc.cluster.local/webhooks/kubeopencode-dogfooding/github"
