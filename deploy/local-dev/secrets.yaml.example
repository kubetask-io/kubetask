# Local test environment secrets
#
# IMPORTANT: Replace placeholder values before applying!
# This file contains example/placeholder credentials for local testing.
#
# Usage:
#   1. Copy this file: cp secrets.yaml secrets.local.yaml
#   2. Edit secrets.local.yaml with real values
#   3. Apply: kubectl apply -f secrets.local.yaml -n test
#
# The secrets.local.yaml file is gitignored.
---
apiVersion: v1
kind: Secret
metadata:
  name: opencode-credentials
type: Opaque
stringData:
  # OpenCode API key for AI model access
  # Get your key from: https://opencode.ai/
  OPENCODE_API_KEY: "sk-your-opencode-api-key-here"
---
apiVersion: v1
kind: Secret
metadata:
  name: git-settings
type: Opaque
stringData:
  GIT_AUTHOR_EMAIL: "test@example.com"
  GIT_AUTHOR_NAME: "Test Bot"
  GIT_COMMITTER_EMAIL: "test@example.com"
  GIT_COMMITTER_NAME: "Test Bot"
